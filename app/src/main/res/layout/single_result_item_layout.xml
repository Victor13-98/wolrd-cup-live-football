
<androidx.appcompat.widget.LinearLayoutCompat xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cardview_dark_background" />

    <TableLayout
        android:stretchColumns= "*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow android:background="#ffff" android:padding="5dp" android:layout_width="0dp">

            <TextView
                style="@style/textDark"
                android:gravity="start"
                android:id="@+id/fixture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="9sp"
                android:text="Chelsea Vs manu"
                tools:ignore="SmallSp" />
            <TextView
                style="@style/textDark"
                android:gravity="start"
                android:id="@+id/prediction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="9sp"
                android:text="Over 2.5"
                tools:ignore="SmallSp" />

            <TextView
                style="@style/textDark"
                android:gravity="end"
                android:id="@+id/results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="9sp"
                android:text="WON"
                tools:ignore="SmallSp" />
        </TableRow>
    </TableLayout>
</androidx.appcompat.widget.LinearLayoutCompat>